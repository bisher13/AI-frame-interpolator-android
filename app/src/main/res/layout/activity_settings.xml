<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/md_theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Quality Presets Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/md_theme_surface"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality Preset"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/md_theme_onSurface"
                    android:layout_marginBottom="16dp"/>

                <RadioGroup
                    android:id="@+id/rgQualityPreset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbFast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fast (480p)"/>

                    <RadioButton
                        android:id="@+id/rbBalanced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Balanced (720p)"/>

                    <RadioButton
                        android:id="@+id/rbQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quality (Original)"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/tvQualityDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="#666"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Speed Controls Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed Controls"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed Factor"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

                <Spinner
                    android:id="@+id/spinnerSpeedFactor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Speed Multiplier"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderCustomSpeed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:valueFrom="2"
                        android:valueTo="32"
                        android:stepSize="1"/>

                    <TextView
                        android:id="@+id/tvCustomSpeedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2x"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:minWidth="40dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target FPS"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderTargetFps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:valueFrom="30"
                        android:valueTo="240"
                        android:stepSize="30"/>

                    <TextView
                        android:id="@+id/tvTargetFpsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60 FPS"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:minWidth="60dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Export Options Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export Options"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video Codec"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

                <Spinner
                    android:id="@+id/spinnerCodec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export Bitrate"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderBitrate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:valueFrom="1.0"
                        android:valueTo="50.0"
                        android:stepSize="0.5"/>

                    <TextView
                        android:id="@+id/tvBitrateValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.0 Mbps"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:minWidth="80dp"/>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cbExportGif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export as GIF (animated)"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Advanced Settings Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbSceneDetection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scene Detection (avoid interpolating across cuts)"/>

                <CheckBox
                    android:id="@+id/cbFramePadding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Frame Padding (better edge quality)"/>

                <CheckBox
                    android:id="@+id/cbTimelapseMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Timelapse Mode (speed up instead of slow down)"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnResetDefaults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset Defaults"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnSaveSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save Settings"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
