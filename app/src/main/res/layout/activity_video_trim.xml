<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/md_theme_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trim Video"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/md_theme_onBackground"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvVideoDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Duration: 00:00"
        android:textSize="14sp"
        android:alpha="0.7"
        android:textColor="@color/md_theme_onBackground"
        android:layout_marginBottom="16dp"/>

    <!-- Video Preview Player -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardVideoPreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/md_theme_surface"
        app:cardCornerRadius="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/videoPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnPlayPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="▶ Preview"
                android:textSize="18sp"
                style="@style/Widget.Material3.Button.Icon"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Trim Range Slider -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/md_theme_surface"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Trim Range"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="20dp"/>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/rangeSliderTrim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- Frame Previews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Frame"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        
                        <ImageView
                            android:id="@+id/ivStartPreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#e0e0e0"
                            android:visibility="gone"
                            android:contentDescription="Start frame preview"/>
                        
                        <ProgressBar
                            android:id="@+id/pbStartPreview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Frame"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        
                        <ImageView
                            android:id="@+id/ivEndPreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#e0e0e0"
                            android:visibility="gone"
                            android:contentDescription="End frame preview"/>
                        
                        <ProgressBar
                            android:id="@+id/pbEndPreview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start: 00:00.00"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:padding="4dp"/>
                    
                    <Button
                        android:id="@+id/btnStepStartBack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="◀"
                        android:textSize="10sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>
                    
                    <Button
                        android:id="@+id/btnStepStartForward"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="▶"
                        android:textSize="10sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical">
                    
                    <Button
                        android:id="@+id/btnStepEndBack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="◀"
                        android:textSize="10sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>
                    
                    <Button
                        android:id="@+id/btnStepEndForward"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="▶"
                        android:textSize="10sp"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>
                    
                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End: 00:00.00"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:padding="4dp"
                        android:gravity="end"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTrimDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trim Duration: 00:00.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvEstimatedFrames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated frames: ~0 frames"
                android:textSize="12sp"
                android:textColor="#666"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Quick Trim Buttons -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/md_theme_surface"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Trim"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnTrimFirst10s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First 10s"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                <Button
                    android:id="@+id/btnTrimFirst30s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First 30s"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                <Button
                    android:id="@+id/btnTrimFirst1m"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First 1m"
                    android:layout_marginStart="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnTrimLast10s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Last 10s"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                <Button
                    android:id="@+id/btnTrimLast30s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Last 30s"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                <Button
                    android:id="@+id/btnTrimLast1m"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Last 1m"
                    android:layout_marginStart="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnResetTrim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset to Full Video"
                style="@style/Widget.Material3.Button.OutlinedButton"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCancelTrim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <Button
            android:id="@+id/btnApplyTrim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply Trim"/>
    </LinearLayout>
</LinearLayout>
